<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="599dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="127dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/weighticon"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Convert Patient Weight"
                android:fontFamily="@font/adamina"
                android:textAlignment="center"
                android:textSize="18sp" />



            <EditText
                android:id="@+id/inputText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-light"
                android:hint="Weight of Patient"
                android:inputType="number"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/displayFrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="" />

            <TextView
                android:id="@+id/arrow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="14sp"
                android:fontFamily="@font/adamina"
                android:text="" />



            <TextView
                android:id="@+id/outputText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"

                android:fontFamily="@font/adamina"
                android:gravity="top|center"
                android:text=""
                android:textSize="24sp" />

            <TextView
                android:id="@+id/displayTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="14sp"
                android:fontFamily="@font/adamina"
                android:layout_marginBottom="10dp"
                android:text="" />

            <RadioGroup
                android:id="@+id/choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


                <RadioButton
                    android:id="@+id/lbToKilo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Convert Pounds to Kilograms"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/kiloTolb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/adamina"
                    android:text="Convert Kilograms to Pounds"
                    android:textSize="18sp" />

            </RadioGroup>

            <Button
                android:id="@+id/convert"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/stroke"
                android:fontFamily="@font/adamina"
                android:onClick="convert"
                android:text="Convert Weight"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>